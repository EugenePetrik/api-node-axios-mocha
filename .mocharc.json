{
  "require": ["dotenv/config"],
  "slow": 5000,
  "timeout": 60000,
  "color": true,
  "delay": false,
  "package": "./package.json",
  "retries": 1,
  "spec": ["./test/**/*.test.js"],
  "reporter": "mochawesome",
  "reporter-option": [
    "reportDir=reports",
    "reportFilename=report",
    "quiet=true",
    "consoleReporter=spec",
    "html=true",
    "json=true"
  ]
}
